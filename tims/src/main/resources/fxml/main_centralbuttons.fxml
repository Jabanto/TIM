                        <Double fx:value="80.0" />
                        <Double fx:value="20.0" />
                        <Double fx:value="80.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="40.0" />
                    </points>
                </Polygon>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../icons/support.png" />
            </image>
            </ImageView>
                <Label styleClass="label-poligon-btn" text="TOOLS" />
            </StackPane>
            <StackPane fx:id="keys_btn" layoutX="65" layoutY="87" onMouseClicked="#openKeysMenu">
            <Polygon styleClass="poligon-hexagon">
                <points>
                    <Double fx:value="20.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="60.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="80.0" />
                    <Double fx:value="40.0" />
