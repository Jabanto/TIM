                    <Double fx:value="20.0" />
                    <Double fx:value="80.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="40.0" />
                </points>
            </Polygon>
                <Label styleClass="label-poligon-btn" text="USERS" />
            </StackPane>

            <StackPane fx:id="tools_btn" layoutX="65" onMouseClicked="#openToolsMenu">
                <Polygon styleClass="poligon-hexagon">
                    <points>
                        <Double fx:value="20.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="60.0" />
