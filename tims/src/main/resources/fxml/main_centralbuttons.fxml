                    <Double fx:value="0.0" />
                    <Double fx:value="40.0" />
                </points>
            </Polygon>
            <ImageView pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../icons/key.png" />
            </image>
            </ImageView>
                <Label styleClass="label-poligon-btn" text="KEY'S" />
            </StackPane>
            <StackPane fx:id="items_btn" layoutX="130" layoutY="45" onMouseClicked="#openItemsMenu">
            <Polygon stroke="BLACK" strokeType="INSIDE" styleClass="poligon-hexagon">
                <points>
                    <Double fx:value="20.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="60.0" />
