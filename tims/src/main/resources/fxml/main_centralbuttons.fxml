                    <Double fx:value="20.0" />
                    <Double fx:value="80.0" />
                    <Double fx:value="0.0" />
                    <Double fx:value="40.0" />
                </points>
            </Polygon>
                <Label styleClass="label-poligon-btn" text="ITEMS" />
            </StackPane>
        </children>
</Group>
