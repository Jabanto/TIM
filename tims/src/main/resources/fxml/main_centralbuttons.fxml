<Group stylesheets="@/styles/styles.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
       xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="com.jabanto.tims.controller.MainMenuController">

        <children>
            <StackPane fx:id="users_btn" layoutY="43" onMouseClicked="#openUserMenu">

